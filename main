                        func_produtos.consultarProduto()
                elif (opcao==3):			
                        func_produtos.alterarProdutoPorCodigo()
                elif (opcao==4):
                        func_produtos.apagarProduto()
                elif (opcao==5):
                        func_produtos.listarEstoque()
                elif (opcao==0):
                        func_produtos.sobreNos()
